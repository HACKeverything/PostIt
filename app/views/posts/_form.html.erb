<%= render "shared/errors", obj: @post %>

<div class="well">
	<%= form_for @post do |f| %>
		<div class="controller-group">
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>
		<div class="controller-group">
			<%= f.label :url %>
			<%= f.text_field :url %>
		</div>
		<div class="controller-group">
			<%= f.label :description %>
			<%= f.text_area :description, rows: 5 %>
		</div>
		<%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: "btn btn-primary") %>
	<% end %>
	<div class="controller-group">
		<%= @categories.each do |category| %>
			<%= category.name %>
		<% end %>
	</div>
</div>